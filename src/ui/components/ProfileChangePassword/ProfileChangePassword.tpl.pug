include ../../mixins/profile-item/profile-item

form.profile
  .profile__header
    .profile__img
      span.profile__img-plug= plug
      if avatar
        img(src= `https://ya-praktikum.tech/api/v2/resources${avatar}`, alt="avatar")
    h1.profile__title= `${first_name} ${second_name}`
  .profile__main
    +profileItem('Старый пароль')
      | !{oldPassword}
    +profileItem('Новый пароль')
      | !{newPassword}
    +profileItem('Повторите новый пароль')
      | !{newPasswordRepeat}
  .profile__footer
      | !{saveButton}
      | !{escLink}
