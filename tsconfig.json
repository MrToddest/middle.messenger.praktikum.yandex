{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "sourceMap": false,
    "declaration": true,
    "moduleResolution": "node",
    "target": "ES2015",
    "typeRoots": ["node_modules/@types"],
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "ESNext",
  },
  "exclude": ["node_modules", "dist", "server.js"],
  "include": ["src/**/*.ts"],
}